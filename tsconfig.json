{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "strict": true,
    "target": "ES2021"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src"]
}
