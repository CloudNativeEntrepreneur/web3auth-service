    "@types/validator": "13.7.0",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "dotenv-cli": "4.1.0",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-svelte3": "3.2.1",
    "nodemon": "2.0.15",
    "prettier": "2.4.1",
    "prettier-plugin-svelte": "2.5.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "resolutions": {
    "ethereumjs-util": ">=6.0.0"
